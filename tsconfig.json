{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/modules/core/*"],
      "@domains/*": ["src/domains/*"],
      "*": ["node_modules/*", "src/libs/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
